<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fyp_footballmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/footballicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.example.fyp_footballmanager.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
            
        <activity
            android:name="com.example.fyp_footballmanager.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.fyp_footballmanager.LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
           
        <activity
            android:name="com.example.fyp_footballmanager.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.fyp_footballmanager.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="com.example.fyp_footballmanager.Squad"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.fyp_footballmanager.Squad" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="com.example.fyp_footballmanager.Fixtures"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.fyp_footballmanager.Fixtures" />
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="com.example.fyp_footballmanager.Tactics"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.fyp_footballmanager.Tactics" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="com.example.fyp_footballmanager.About"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.fyp_footballmanager.About" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         
    </application>

</manifest>